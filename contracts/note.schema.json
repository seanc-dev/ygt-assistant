{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ygt-assistant/contracts/note.schema.json",
  "title": "Note",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "fact"],
  "properties": {
    "id": { "type": "string" },
    "fact": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "source": { "type": "string" },
    "last_used_at": { "type": "string", "format": "date-time" }
  }
}
